<Window x:Class="DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoApp"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_OnLoaded"
        Title="Azure Speech Demo" Height="450" Width="450">
    <StackPanel Orientation="Vertical">
        <Button Name="btnSTT" Click="BtnSTT_OnClick" Height="30" Margin="20,20,20,0">Speak to Text</Button>
        <Button Name="btnConversation" Click="BtnConversation_OnClick" Height="30" Margin="20,20,20,0">Speak to Conversation</Button>
        <Button Name="btnTTS" Click="BtnTTS_OnClick" Height="30" Margin="20,20,20,0">Text to Speak</Button>
    </StackPanel>
</Window>
